@model SIMS.Models.ApplicationUser
@inject SIMS.Services.Interfaces.IUserManagementService UserService
@inject SIMS.Services.Interfaces.ICourseManagementService CourseService

@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="dashboard-container">
    <h2>Admin Dashboard</h2>

    <div class="row">
        <div class="col-md-6">
            <div class="card info-card">
                <div class="card-body">
                    <h4 class="card-title">Welcome, @Model.FirstName @Model.LastName!</h4>
                    <p class="card-text"><strong>Email:</strong> @Model.Email</p>
                    <p class="card-text"><strong>Code:</strong> @Model.UserCode</p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .dashboard-container {
        background-color: #fff;
        padding: 20px;
        border-radius: 10px;
        margin-bottom: 20px;
    }

        .dashboard-container h2 {
            color: #2F3645;
            font-weight: 600;
            margin-bottom: 20px;
        }

    .info-card, .stats-card {
        border: 1px solid #E6B9A6;
        border-radius: 8px;
    }

        .info-card .card-title, .stats-card .card-title {
            color: #2F3645;
            font-weight: 500;
            margin-bottom: 15px;
        }

        .info-card .card-text, .stats-card .card-text {
            color: #933985; /* Sửa lỗi màu */
            margin-bottom: 10px;
        }

            .info-card .card-text strong, .stats-card .card-text strong {
                color: #2F3645;
            }

    .btn-primary {
        background-color: #2F3645;
        border: none;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #1F2635;
        }
</style>