@model SIMS.Controllers.CourseInstructorController.InstructorCoursesViewModel

@{
    ViewData["Title"] = "My Courses";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="courses-container">
    <h2>My Courses</h2>

    @if (Model.Courses != null && Model.Courses.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover custom-table">
                <thead>
                    <tr>
                        <th>Course Code</th>
                        <th>Course Name</th>
                        <th>Credits</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var course in Model.Courses)
                    {
                        <tr>
                            <td>@course.CourseId</td>
                            <td>@course.CourseName</td>
                            <td>@course.Credits</td>
                            <td>
                                <a asp-action="ManageGrades" asp-route-courseId="@course.CourseId" class="btn btn-primary btn-sm">Manage Grades</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            You are not assigned to any courses.
        </div>
    }
</div>

<style>
    .courses-container {
        background-color: #fff; /* Màu nền trắng cho container */
        padding: 20px;
        border-radius: 10px;
        margin-bottom: 20px;
    }

        .courses-container h2 {
            color: #2F3645; /* Màu xanh đen đậm cho tiêu đề */
            font-weight: 600;
            margin-bottom: 20px;
        }

    .custom-table {
        border: 1px solid #E6B9A6; /* Viền màu hồng nhạt */
        border-radius: 8px;
        overflow: hidden; /* Đảm bảo bo góc không bị cắt */
    }

        .custom-table thead {
            background-color: #2F3645; /* Màu xanh đen đậm cho header */
            color: #EEEDEB; /* Màu chữ nhạt */
        }

        .custom-table th, .custom-table td {
            padding: 12px 15px;
            vertical-align: middle;
            color: #9339185; /* Màu xám nâu cho chữ trong bảng */
        }

        .custom-table tbody tr {
            transition: background-color 0.3s ease;
        }

        /*.custom-table tbody tr:hover {
                    background-color: #E6B9A6;
                    color: #2F3645;
                }*/

        .custom-table .btn-primary {
            background-color: #2F3645; /* Màu xanh đen đậm cho button */
            border: none;
            border-radius: 5px;
            padding: 6px 12px;
            transition: background-color 0.3s ease;
        }

    .alert-info {
        background-color: #EEEDEB; /* Màu nền nhạt cho thông báo */
        color: #9339185; /* Màu xám nâu cho chữ */
        border-color: #E6B9A6; /* Viền màu hồng nhạt */
        border-radius: 8px;
    }
</style>