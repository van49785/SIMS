@model IEnumerable<SIMS.Controllers.CourseManagementController.CourseViewModel>

@{
    ViewData["Title"] = "Manage Courses";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="courses-container">
    <h2>Manage Courses</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success custom-alert" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }

    <div class="mb-4">
        <a asp-action="Create" class="btn btn-primary">Create New Course</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover custom-table">
            <thead>
                <tr>
                    <th>Course Name</th>
                    <th>Credits</th>
                    <th>Department</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var course in Model)
                {
                    <tr>
                        <td>@course.CourseName</td>
                        <td>@course.Credits</td>
                        <td>@course.DepartmentName</td>
                        <td>
                            <a class="btn btn-secondary btn-sm" asp-action="Edit" asp-route-id="@course.CourseId">Edit</a>
                            <a class="btn btn-danger btn-sm ml-2" asp-action="Delete" asp-route-id="@course.CourseId">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .courses-container {
        background-color: #fff; /* Màu nền trắng cho container */
        padding: 20px;
        border-radius: 10px;
        margin-bottom: 20px;
    }

        .courses-container h2 {
            color: #2F3645; /* Màu xanh đen đậm cho tiêu đề */
            font-weight: 600;
            margin-bottom: 20px;
        }

    .custom-alert {
        background-color: #EEEDEB; /* Màu nền nhạt cho thông báo */
        color: #9339185; /* Màu xám nâu cho chữ */
        border-color: #E6B9A6; /* Viền màu hồng nhạt */
        border-radius: 8px;
        margin-bottom: 20px;
    }

    .btn-primary {
        background-color: #2F3645; /* Màu xanh đen đậm cho nút Create */
        border: none;
        border-radius: 5px;
        padding: 8px 16px;
        transition: background-color 0.3s ease;
    }

    .custom-table {
        border: 1px solid #E6B9A6; /* Viền màu hồng nhạt */
        border-radius: 8px;
        overflow: hidden; /* Đảm bảo bo góc không bị cắt */
    }

        .custom-table thead {
            background-color: #2F3645; /* Màu xanh đen đậm cho header */
            color: #EEEDEB; /* Màu chữ nhạt */
        }

        .custom-table th, .custom-table td {
            padding: 12px 15px;
            vertical-align: middle;
            color: #9339185; /* Màu xám nâu cho chữ trong bảng */
        }

        .custom-table tbody tr {
            transition: background-color 0.3s ease;
        }

    .btn-secondary {
        background-color: #9339185; /* Màu xám nâu cho nút Edit */
        border: none;
        border-radius: 5px;
        padding: 6px 12px;
        transition: background-color 0.3s ease;
    }

    .btn-danger {
        background-color: #dc3545; /* Màu đỏ cho nút Delete */
        border: none;
        border-radius: 5px;
        padding: 6px 12px;
        transition: background-color 0.3s ease;
    }

</style>