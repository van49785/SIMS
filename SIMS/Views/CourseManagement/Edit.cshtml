@model SIMS.Controllers.CourseManagementController.CourseEditViewModel

@{
    ViewData["Title"] = "Edit Course";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="edit-course-container">
    <h2>Edit Course</h2>

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="CourseId" />
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="CourseName" class="control-label"></label>
                    <input asp-for="CourseName" class="form-control custom-input" />
                    <span asp-validation-for="CourseName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Credits" class="control-label"></label>
                    <input asp-for="Credits" class="form-control custom-input" type="number" />
                    <span asp-validation-for="Credits" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="DepartmentId" class="control-label"></label>
                    <select asp-for="DepartmentId" class="form-control custom-select" asp-items="ViewBag.Departments">
                        <option value="">-- Select Department --</option>
                    </select>
                    <span asp-validation-for="DepartmentId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a asp-action="Index" class="btn btn-secondary ml-2">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .edit-course-container {
        background-color: #fff; /* Màu nền trắng cho container */
        padding: 20px;
        border-radius: 10px;
        margin-bottom: 20px;
    }

        .edit-course-container h2 {
            color: #2F3645; /* Màu xanh đen đậm cho tiêu đề */
            font-weight: 600;
            margin-bottom: 20px;
        }

    .form-group label {
        color: #9339185; /* Màu xám nâu cho label */
        font-weight: 500;
    }

    .custom-input, .custom-select {
        border: 1px solid #E6B9A6; /* Viền màu hồng nhạt */
        border-radius: 5px;
        padding: 8px;
        background-color: #EEEDEB; /* Màu nền nhạt */
        color: #2F3645; /* Màu chữ xanh đen đậm */
        transition: border-color 0.3s ease;
    }

        .custom-input:focus, .custom-select:focus {
            border-color: #2F3645; /* Màu xanh đen đậm khi focus */
        }

    .text-danger {
        font-size: 0.875rem;
    }

    .btn-primary {
        background-color: #2F3645; /* Màu xanh đen đậm cho nút Save */
        border: none;
        border-radius: 5px;
        padding: 8px 16px;
        transition: background-color 0.3s ease;
    }

    .btn-secondary {
        background-color: #9339185; /* Màu xám nâu cho nút Cancel */
        border: none;
        border-radius: 5px;
        padding: 8px 16px;
        transition: background-color 0.3s ease;
    }
</style>