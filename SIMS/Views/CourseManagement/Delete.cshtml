@model SIMS.Models.Course

@{
    ViewData["Title"] = "Delete Course";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="delete-course-container">
    <h2>Delete Course</h2>

    <h3>Are you sure you want to delete this course?</h3>

    <div class="course-details card">
        <div class="card-body">
            <h4 class="card-title">Course Details</h4>
            <dl class="row">
                <dt class="col-sm-3">Course Name</dt>
                <dd class="col-sm-9">@Model.CourseName</dd>

                <dt class="col-sm-3">Credits</dt>
                <dd class="col-sm-9">@Model.Credits</dd>

                <dt class="col-sm-3">Department</dt>
                <dd class="col-sm-9">@(Model.Department?.DepartmentName ?? "N/A")</dd>
            </dl>
        </div>
    </div>

    <div class="mt-4">
        <form asp-action="Delete" class="d-inline">
            <input type="hidden" asp-for="CourseId" />
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
        <a asp-action="Index" class="btn btn-secondary ml-2">Cancel</a>
    </div>
</div>

<style>
    .delete-course-container {
        background-color: #fff; /* Màu nền trắng cho container */
        padding: 20px;
        border-radius: 10px;
        margin-bottom: 20px;
    }

        .delete-course-container h2 {
            color: #2F3645; /* Màu xanh đen đậm cho tiêu đề */
            font-weight: 600;
            margin-bottom: 15px;
        }

        .delete-course-container h3 {
            color: #9339185; /* Màu xám nâu cho câu hỏi xác nhận */
            font-weight: 500;
            margin-bottom: 20px;
        }

    .course-details {
        border: 1px solid #E6B9A6; /* Viền màu hồng nhạt */
        border-radius: 8px;
        background-color: #EEEDEB; /* Màu nền nhạt */
        transition: box-shadow 0.3s ease;
    }

        .course-details .card-title {
            color: #2F3645; /* Màu xanh đen đậm cho tiêu đề card */
            font-weight: 500;
            margin-bottom: 15px;
        }

        .course-details dt {
            color: #2F3645; /* Màu xanh đen đậm cho nhãn */
            font-weight: 500;
        }

        .course-details dd {
            color: #9339185; /* Màu xám nâu cho giá trị */
        }

    .btn-danger {
        background-color: #dc3545; /* Màu đỏ cho nút Delete */
        border: none;
        border-radius: 5px;
        padding: 8px 16px;
        transition: background-color 0.3s ease;
    }

    .btn-secondary {
        background-color: #9339185; /* Màu xám nâu cho nút Cancel */
        border: none;
        border-radius: 5px;
        padding: 8px 16px;
        transition: background-color 0.3s ease;
    }
</style>