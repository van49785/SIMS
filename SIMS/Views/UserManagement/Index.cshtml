@model IEnumerable<SIMS.Controllers.UserManagementController.UserViewModel>

@{
    ViewData["Title"] = "Manage Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="users-container">
    <h2>Manage Users</h2>

    <div class="mb-4">
        <a asp-action="Create" class="btn btn-primary">Create New User</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover custom-table">
            <thead>
                <tr>
                    <th>Email</th>
                    <th>User Code</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Role</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Email</td>
                        <td>@user.UserCode</td>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Role</td>
                        <td>
                            <a class="btn btn-secondary btn-sm" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                            <a class="btn btn-danger btn-sm ml-2" asp-action="Delete" asp-route-id="@user.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .users-container {
        background-color: #fff;
        padding: 20px;
        border-radius: 10px;
        margin-bottom: 20px;
    }

        .users-container h2 {
            color: #2F3645;
            font-weight: 600;
            margin-bottom: 20px;
        }

    .btn-primary {
        background-color: #2F3645;
        border: none;
        border-radius: 5px;
        padding: 8px 16px;
        transition: background-color 0.3s ease;
    }

    .custom-table {
        border: 1px solid #E6B9A6;
        border-radius: 8px;
        overflow: hidden;
    }

        .custom-table thead {
            background-color: #2F3645;
            color: #EEEDEB;
        }

        .custom-table th, .custom-table td {
            padding: 12px 15px;
            vertical-align: middle;
            color: #9339185;
        }

        .custom-table tbody tr {
            transition: background-color 0.3s ease;
        }

    .btn-secondary {
        background-color: #9339185;
        border: none;
        border-radius: 5px;
        padding: 6px 12px;
        transition: background-color 0.3s ease;
    }

    .btn-danger {
        background-color: #dc3545;
        border: none;
        border-radius: 5px;
        padding: 6px 12px;
        transition: background-color 0.3s ease;
    }
</style>