@model SIMS.Controllers.UserManagementController.UserEditViewModel

@{
    ViewData["Title"] = "Edit User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="edit-user-container">
    <h2>Edit User</h2>

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control custom-input" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="UserCode" class="control-label"></label>
                    <input asp-for="UserCode" class="form-control custom-input" />
                    <span asp-validation-for="UserCode" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control custom-input" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control custom-input" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Role" class="control-label"></label>
                    <select asp-for="Role" class="form-control custom-select" asp-items="ViewBag.Roles"></select>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="DepartmentId" class="control-label"></label>
                    <select asp-for="DepartmentId" class="form-control custom-select" asp-items="ViewBag.Departments">
                        <option value="">-- Select Department --</option>
                    </select>
                    <span asp-validation-for="DepartmentId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a asp-action="Index" class="btn btn-secondary ml-2">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .edit-user-container {
        background-color: #fff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
    }

        .edit-user-container h2 {
            color: #2F3645;
            font-weight: 600;
            margin-bottom: 20px;
        }

    .form-group label {
        color: #9339185;
        font-weight: 500;
    }

    .custom-input, .custom-select {
        border: 1px solid #E6B9A6;
        border-radius: 5px;
        padding: 8px;
        background-color: #EEEDEB;
        color: #2F3645;
        transition: border-color 0.3s ease;
    }

        .custom-input:focus, .custom-select:focus {
            border-color: #2F3645;
        }

    .text-danger {
        font-size: 0.875rem;
    }

    .btn-primary {
        background-color: #2F3645;
        border: none;
        border-radius: 5px;
        padding: 8px 16px;
        transition: background-color 0.3s ease;
    }


    .btn-secondary {
        background-color: #9339185;
        border: none;
        border-radius: 5px;
        padding: 8px 16px;
        transition: background-color 0.3s ease;
    }
</style>